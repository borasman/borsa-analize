{% extends 'base.html.twig' %}

{% block title %}Borsa Analize - Giriş{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Giriş Yap</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form action="{{ path('app_login') }}" method="post">
                        <div class="form-group mb-3">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" class="form-control" value="{{ last_username }}" required autofocus>
                        </div>

                        <div class="form-group mb-3">
                            <label for="password">Şifre:</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-check mb-3">
                            <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input">
                            <label for="remember_me" class="form-check-label">Beni Hatırla</label>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Hesabınız yok mu? <a href="{{ path('app_register') }}">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 